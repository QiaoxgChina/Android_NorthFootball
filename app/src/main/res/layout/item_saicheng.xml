<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:background="@drawable/selector_item_bg_white_2_gray"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/zhu_ll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zhuLogo_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/label_mu"/>

            <TextView
                android:id="@+id/zhu_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="莫斯科中央陆军"
                android:gravity="center"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ke_ll"
            android:layout_toRightOf="@+id/zhu_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="22:00 英超第4轮"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/collection_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_collection"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ke_ll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/keLogo_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/label_hd"/>

            <TextView
                android:id="@+id/ke_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="恒大"
                android:textSize="14dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>